*
  margin 0

html
  scroll-behavior initial

body
  background #222
  color white

html, body
  width 100%
  min-height 100%

.title
  color #999
  font 3em arial, sans-serif
  text-align center

.sec
  display grid
  align-content center
  width 100%
  height 200vh
  overflow hidden

.sec--left
  justify-items start !important

.sec--right
  justify-items end !important

.sec--center
  justify-items center !important

.container-wrapper
  perspective 200vw
  width 60%

.container
  transform-style preserve-3d
  position relative
  // transform-origin left center

.container__bg
  transform translateZ(0vw)
  width 100%
  height auto
  z-index 10

.container__fg
  position absolute
  top 50%
  left 50%
  translate -50% -50%
  transform translateZ(15vw)
  width 200%
  height 200%
  scale 0.5

.dim
  position fixed
  width 100%
  height 0
  background #222
  left 0
  bottom 0
  z-index 10

.fixed
  position fixed
  top 0
  left 0
  width 100vw
  --clip 100%
  clip-path polygon(0 0, 100% 0, 100% var(--clip), 0 var(--clip))

.barba--fixed
  background #222
  position fixed
  top 0
  left 0
  z-index 100
  // visibility hidden
  --clip1 100vh
  clip-path polygon(0 var(--clip1), 100% var(--clip1), 100% 100vh, 0 100vh)
