$gray-1 = white
$gray-2 = #bbb
$gray-3 = #888
$gray-6 = #454545
$gray-7 = #333
$gray-8 = #222
$gray-9 = black
$blue-1 = #11b
$blue-2 = #009
$blue-3 = #008

.t
  border 10px solid #777

.sec
  display flex
  // align-content center
  justify-content center
  align-items center
  // width 100%
  height 80vh
  padding 0 15%

.img
  width 400px
  background $gray-6
  aspect-ratio 1 / 1

.title
  font-size 5em
  color $gray-1
  line-height 1.2em

.text
  font-size 1em
  color $gray-1

.btn
  padding 1em 3em
  color white
  background $blue-2
  border none

  &:hover
    background $blue-1
    cursor pointer

  &:active
    background $blue-3

.info
  // align-self center
  display flex
  flex-direction column
  align-items flex-start
  gap 2em
  flex-grow 1

*
  margin 0

body
  background $gray-8
  font-family 'Poppins'

.hero
  @extend .sec
  background $gray-9

  &__info
    @extend .info
    width 60%
    align-items center

  &__title
    @extend .title
    text-align center

  &__title__break
    // display none

  &__text
    @extend .text

  &__btn
    @extend .btn

.sec1
  @extend .sec
  background $gray-8
  z-index 10

  &__img
    @extend .img

  &__info
    @extend .info
    width 60%
    padding-left 10%

  &__title
    @extend .title

  &__text
    @extend .text

  &__btn
    @extend .btn

.sec2
  @extend .sec
  background $gray-7
  flex-direction row-reverse
  z-index 20

  &__img
    @extend .img

  &__info
    @extend .info
    width 60%
    padding-right 10%

  &__title
    @extend .title

  &__text
    @extend .text

  &__btn
    @extend .btn
